package root.exercice1;

/**
 * class: TestDe
 * @author Gwenaël
 * @date 24/09/2020
 */

public class DeMemoire extends De {
	private int lastLaunch = 0;
	
	public DeMemoire(String deName)
	{ super(deName); }
	
	public DeMemoire(int faces, String deName)
	{ super(faces, deName);	}
	
	public int lancer()
	{
		int launch = super.lancer();
		
		while(launch == this.lastLaunch)
			launch = super.lancer();
		
		this.lastLaunch = launch;
		return launch;
	}
	
	public int lancer(int nb)
	{
		int meilleur = 0;
		int lancer = 0;
		
		for(int i = 0; i < nb; i++)
		{
			lancer = this.lancer();
			if(lancer > meilleur)
				meilleur = lancer;
		}
		
		return meilleur;
	}
}
