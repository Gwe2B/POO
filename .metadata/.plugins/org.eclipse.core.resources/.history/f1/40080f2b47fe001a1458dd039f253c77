package exercice2;

public class Entier {
	private int valeur;
	private int bInf;
	private int bSup;
	
	public Entier(int bInf, int bSup)
	{
		this.bInf = bInf;
		this.bSup = bSup;
		this.valeur = 0;
	}
	
	public Entier(int entier, int bInf, int bSup)
	{
		if(entier >= bInf && entier < bSup)
		{
			this.bInf = bInf;
			this.bSup = bSup;
			this.valeur = entier;
		}
		else
			System.err.println("L'entier ne correspond pas aux bornes spécifié");
	}

	/*** GETTEURS ***/
	public int getbSup() 
	{ return bSup; }

	public int getbInf() 
	{ return bInf; }
	
	public int getEntier()
	{ return this.valeur; }
	
	/*** SETTEURS ***/
	public void setEntier(int val)
	{
		if(val >= this.bInf && val <= this.bSup)
			this.valeur = val;
	}
	
	/*** HERITE DE OBJECT ***/
	public String toString()
	{ return Integer.toString(this.valeur); }
	
	public boolean equals(Entier ent)
	{
		boolean equal = false;
		
		if(ent.bSup == this.bSup && ent.bInf == this.bInf && ent.valeur == this.valeur)
			equal = true;
		
		return equal;
	}
	
	/*** METHODS ***/
	public void incremente()
	{
		if(this.valeur + 1 >= this.bInf && this.valeur + 1 <= this.bSup)
			this.valeur++;
	}
	
	public void incremente(int n)
	{
		if(this.valeur + n >= this.bInf && this.valeur + n <= this.bSup)
			this.valeur += n;
	}
}
