package root;

public class De {
	private int nbFaces;
	
	public De()
	{ this(6); }

	public De(int faces)
	{ this.setNbFaces(faces); }
	
	public int getNbFaces()
	{ return this.nbFaces; }
	
	public void setNbFaces(int faces)
	{
		if(faces >= 3 && faces <= 120)
			this.nbFaces = faces;
		else
			System.err.println("Le nombre de faces est invalide");
	}
}
