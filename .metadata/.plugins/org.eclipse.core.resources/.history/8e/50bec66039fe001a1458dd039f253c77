package root;

import java.util.*;

public class De {
	private static Random r = new Random();
	private static int nbrInstances = 0;
	
	private int nbFaces;
	private String nom;
	
	public De(String deName)
	{ this(6, deName); }

	public De(int faces, String deName)
	{
		this.setNbFaces(faces);
		
		if(deName != null && deName.length() > 0)
			this.nom = deName;
		else
		{
			this.nom = "Dé n°" + De.nbrInstances;
			De.nbrInstances++;
		}
	}
	
	public String getNom()
	{ return this.nom; }
	
	public int getNbFaces()
	{ return this.nbFaces; }
	
	public void setNbFaces(int faces)
	{
		if(faces >= 3 && faces <= 120)
			this.nbFaces = faces;
		else
			System.err.println("Le nombre de faces est invalide");
	}
	
	public int lancer()
	{
		return De.r.nextInt(this.nbFaces) + 1;
	}
	
	public int lancer(int nb)
	{
		int meilleur = 0;
		int lancer = 0;
		
		for(int i = 0; i < nb; i++)
		{
			lancer = this.lancer();
			if(lancer > meilleur)
				meilleur = lancer;
		}
		
		return meilleur;
	}
}
